        }

        .calculator {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
            width: 250px;
        }

        .display {
            width: 100%;
            height: 50px;
            border: 1px solid #ccc;
            border-radius: 5px;
            text-align: right;
            padding: 10px;
            font-size: 20px;
            margin-bottom: 15px;
        }

        .buttons {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 10px;
        }

        button {
            padding: 15px;
            background-color: #2d2d2d;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
